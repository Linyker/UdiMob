<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="20"
    >
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="10"
        >

        <Gallery
            android:id="@+id/gallery1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"

            />

    </LinearLayout>


    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_weight="10"
        android:background="#CCC"
        >


        <TextView
            android:id="@+id/labelEndereco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/endereco" />

        <TextView
            android:id="@+id/endereco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/labelEndereco" />

        <TextView
            android:id="@+id/labelBairro"
            android:layout_below="@id/labelEndereco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bairro" />

        <TextView
            android:id="@+id/bairro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/labelBairro"
            android:layout_below="@id/endereco"/>

        <TextView
            android:id="@+id/precolabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/labelBairro"
            android:text="@string/preco" />

        <TextView
            android:id="@+id/preco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bairro"
            android:layout_toRightOf="@+id/precolabel" />

        <TextView
            android:id="@+id/proprietariolabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/precolabel"
            android:text="@string/proprietario" />

        <TextView
            android:id="@+id/proprietario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/preco"
            android:layout_toRightOf="@+id/proprietariolabel" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/emaillabel"
            android:layout_below="@id/proprietariolabel"
            android:text="@string/email"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/email"
            android:layout_below="@id/proprietario"
            android:layout_toRightOf="@id/emaillabel"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/telefonelabel"
            android:layout_below="@id/emaillabel"
            android:text="@string/telefone"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/telefone"
            android:layout_below="@id/email"
            android:layout_toRightOf="@id/telefonelabel"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/descricaolabel"
            android:text="@string/descricao"
            android:layout_below="@+id/telefonelabel"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/descricao"
            android:layout_below="@id/telefone"
            android:layout_toRightOf="@id/descricaolabel"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_dark"
    >

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/dica"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/informacao"
            android:text="  ACESSE O BOTÃO MENU DO SEU CELULAR PARA VER AS OPÇÕES"
            android:textColor="@android:color/secondary_text_dark_nodisable"
            android:textSize="10dp"
            android:textStyle="bold"
            android:layout_weight="10" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/dica"
            />
    </LinearLayout>
</LinearLayout>